<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_action_sample"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/shopinfo_review_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:text="최근리뷰"
                android:textColor="#909090" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopinfo_review_title"
                android:layout_centerHorizontal="true"
                android:text="13"
                android:textColor="#000" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/shopinfo_shop_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="가게 설명"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="기름기 없는 쇠고기의 우둔살 부위를 얇게 저며, 결을 끊어 가늘게 채썬다. 간장과 참기름, 깨소금, 설탕, 후춧가루 등에 다진 파와 마늘 등을 섞어 양념장을 만든다. 준비된 쇠고기에 양념을 부어 고루 무치고, 채를 썬 배를 같이 접시에 담는다. 또는 육회의 구성을 그대로 비빔밥의 재료로 사용하여 이들 재료와 갖은나물을 곁들여 밥과 섞어먹는 경우가 많다."
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="#eee6c4"
            android:layout_below="@+id/shopinfo_shop_info"/>

    </RelativeLayout>



</LinearLayout>